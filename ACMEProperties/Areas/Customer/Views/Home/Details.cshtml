@model ACMEProperties.Models.Property
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Details";
}

<div class="container backgroundWhite">
    <div class="card">
        <div class="card-header bg-light text-light ml-0 row container">
            <div class="col-2 col-md-6">
                <h1 class="text-primary">@Model.Name</h1>
            </div>
          
        </div>
        <div class="card-body">
            <div class=" container rounded p-2">
                <div class="row">
                    <div class="col-12 col-lg-8">
                        <div class="row">
                            <div class="col-12">
                                <h3 class="text-primary">Rent per Month: R @Model.Price</h3>
                                <h4 class="text-muted">@Model.Rental.Name</h4>
                                <h5 class="text-danger">Rooms: @Model.NumberOfRooms</h5>
                                <h5 class="text-danger">Baths: @Model.Bathrooms</h5>
                                <p class="text-secondary">@Html.Raw(Model.LongDesc)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-4 text-center">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-primary btn-square form-control btn-lg" style="height: 50px;">Back to List</a>
                </div>
