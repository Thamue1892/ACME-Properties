@model ACMEProperties.Models.ViewModels.HomeViewModel

@foreach (var category in Model.CategoryList.OrderBy(o => o.ShowOrder))
{
    @if (Model.CategoryList.Any(c => c.Id == category.Id))
    {
        <div class="row container pb-3 backgroundWhite">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-success"><b>@category.Name</b></h2>

                    <div class="col-12">
                        <div class="row my-3">
                            @foreach (var property in Model.PropertyList.Where(c => c.CategoryId == category.Id))
                            {
                                <div class="col-lg-4 col-xl-3 col-md-6 pb-4">
                                    <div class="card" style="border: 2px solid #158CBA ; border-radius: 5px; background: url('/images/home-page/white-painted-wall.jpg')">
                                        <div class="pl-3 pt-1 text-center">
                                            <h3 class="card-title text-primary"><b>@property.Name</b></h3>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <div class="pl-1 text-muted">Rent per Month</div>
                                            <div class="pl-1 text-danger h5">R @property.Price</div>
                                        </div>
                                        <img src="@property.ImageUrl" class="card-img-top p-2 rounded" />

                                        <div class="text-muted text-center pb-2">@property.Rental.Name</div>
                                        <a asp-action="Details" class="btn btn-success" style="border-radius: 2px;" asp-route-id="@property.Id">Details</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}